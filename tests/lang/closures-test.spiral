(program
  (import std)
  (import std.array)

  (var forty-two 42)
  (fun add-forty-two (x)
    (+ x forty-two))
  (fun sub-forty-two (x)
    (- x forty-two))
  (fun add-sub-forty-two (x)
    (add-forty-two (sub-forty-two x)))
  (println (add-forty-two 8))
  (println (add-sub-forty-two 30))

  (var the-array (array-new))
  (array-push! the-array 0)
  (array-push! the-array 1)
  (array-push! the-array 2)
  (array-push! the-array 3)
  (var set-the-array! (lambda (idx val)
    (array-set! the-array idx val)))
  (set-the-array! 2 1000)
  (set-the-array! 3 2000)
  (println (array-get the-array 3)))
